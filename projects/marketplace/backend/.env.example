# MyWork Marketplace - Backend Environment

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/marketplace

# Authentication (Clerk)
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_FRONTEND_API=your-clerk-instance.clerk.accounts.dev

# Payments (Stripe)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# AI (Anthropic)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Vector Database (Pinecone)
PINECONE_API_KEY=xxxxx
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=mywork-brain

# Redis (Upstash)
REDIS_URL=redis://default:xxxxx@xxxxx.upstash.io:6379

# Storage (Cloudflare R2)
R2_ACCESS_KEY_ID=xxxxx
R2_SECRET_ACCESS_KEY=xxxxx
R2_BUCKET=marketplace-files
R2_ENDPOINT=https://xxxxx.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://marketplace-files.xxxxx.r2.cloudflarestorage.com

# Email (Resend)
RESEND_API_KEY=re_xxxxx

# Application
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
ENVIRONMENT=development
LOG_HTTP_REQUESTS=true

# Observability (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.05
SENTRY_PROFILES_SAMPLE_RATE=0.0
