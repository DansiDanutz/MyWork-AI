include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include SECURITY.md
include FAQ.md
include ROADMAP.md
include pyproject.toml
include requirements.txt
include .env.example
include install.sh

# Include all tools
recursive-include tools *.py
recursive-include tools *.md
recursive-include tools *.sh
recursive-include tools *.bat
recursive-include tools *.json

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Include examples and workflows
recursive-include examples *.py
recursive-include examples *.md
recursive-include examples *.json
recursive-include workflows *.py
recursive-include workflows *.yml
recursive-include workflows *.yaml

# Include assets
recursive-include assets *

# Include tests (for development installs)
recursive-include tests *.py

# Exclude compiled files and caches
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude *.egg-info